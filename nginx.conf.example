# Nginx configuration for Hexentanzplatz AR Guide
# Place this in /etc/nginx/sites-available/your-site
# Then symlink: ln -s /etc/nginx/sites-available/your-site /etc/nginx/sites-enabled/
# Reload: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    listen [::]:80;
    server_name 82.165.217.122;  # Replace with your domain or IP
    
    # Redirect HTTP to HTTPS (optional but recommended)
    # return 301 https://$server_name$request_uri;
    
    # Or serve directly on HTTP (for testing)
    root /var/www/hexentanzplatz-ar-guide/out;  # Path to your built Next.js output
    index index.html;

    # Enable gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/javascript application/json application/wasm;

    # MIME types - CRITICAL for WebAssembly
    location ~* \.wasm$ {
        add_header Content-Type application/wasm;
        add_header Access-Control-Allow-Origin *;
        expires 1y;
        access_log off;
    }

    # Serve static files
    location / {
        try_files $uri $uri.html $uri/ =404;
    }

    # Cache static assets
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff|woff2|ttf|svg|mp3|glb)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}

